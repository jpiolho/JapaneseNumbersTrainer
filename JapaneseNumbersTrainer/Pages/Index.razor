@attribute [Route(Routes.MainMenu)]
@inject NavigationService NavigationService

<PageTitle>Index</PageTitle>

<div class="row">
    <div class="col d-flex flex-column align-items-center">
        <h1>Japanese Numbers Trainer</h1>
        <h3>What do you want to do today?</h3>

        <MenuButtonList>
            <MenuButton Text="Normal numbers" Click="() => NavigationService.Goto(Routes.NormalNumbersMenu)"
                        HasOptions="true" OptionsClick="() => NavigationService.Goto(Routes.NormalNumbersOptions)" />
            <MenuButton Text="Dates" Click="() => NavigationService.Goto(Routes.DatesMenu)" />
            <MenuButton Text="Clock" Disabled="true" />
            <MenuButton Text="Age" Disabled="true" />
            <MenuButton Text="Force refresh page" ButtonStyle="MenuButton.Style.Danger" Click="NavigationService.ForceRefresh"/>
        </MenuButtonList>
    </div>
</div>